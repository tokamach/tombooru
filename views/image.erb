<html>
    <head>
	<title>tombooru: <%=img.md5%></title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
	<style>
	 img {
	     max-width:100%;
	     max-height:100%;

	     border: 10px;
	     border-style: solid;
	     border-color: black;

	     margin: auto;
	     margin-left: 50%;
	     display: block;
	 }

	 div#info {
	     /*text-align: center; */
	     
	 }

	 div#container {
	     height: 90%;
	 }
	</style>
    </head>
    <body>
	<div id="info">
	    <p><%=img.path%></p>
	    <p><%=img.md5%></p>
	    <p>tags:</p>
	    <ul>
		<% img.tags[0].each do |t| %>
		    <li><a href="/search/<%=t%>"><%=t%></a></li>
		<% end %>
	    </ul>
	</div>
	<div id="container">
	    <img src="/image/raw/<%=img.md5%>"/>
	</div>
    </body>
</html>
