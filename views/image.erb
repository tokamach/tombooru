<html>
    <head>
	<title>tombooru: <%=img.md5%></title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
	<style>
	 img {
	     max-width:100%;
	     max-height:100%;

	     border: 10px;
	     border-style: solid;
	     border-color: black;

	     margin: auto;
	     margin-left: 50%;
	     display: block;
	 }
	</style>
    </head>
    <body>
	<div class="container">
	    <div class="row">
		<div class="col-lg-3" id="info">
		    <div style="position: -webkit-sticky;
				top: 10px;">
			<h3><%=img.md5%></h3>
			<h4><%=img.path.gsub(/.*animu\//, '')%></h4>
			<p>tags:</p>
			<ul>
			    <% img.tags[0].each do |t| %>
				<li><a href="/search/<%=t%>"><%=t%></a></li>
			    <% end %>
			</ul>
		    </div>
		</div>
		<div class="col-lg-9">
		    <img src="/image/raw/<%=img.md5%>"/>
		</div>
	    </div>
	</div>
    </body>
</html>
